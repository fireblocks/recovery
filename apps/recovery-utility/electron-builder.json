{
  "$schema": "http://json.schemastore.org/electron-builder",
  "appId": "com.fireblocks.recovery-utility",
  "productName": "Fireblocks Recovery Utility",
  "copyright": "Copyright Â© 2022 Fireblocks",
  "extraMetadata": {
    "name": "Fireblocks Recovery Utility"
  },
  "protocols": {
    "name": "Recovery Relay Responses",
    "schemes": ["fireblocks-recovery"],
    "role": "Viewer"
  },
  "directories": {
    "output": "dist",
    "buildResources": "resources"
  },
  "files": [
    {
      "from": ".",
      "filter": ["package.json", "app"]
    },
    {
      "from": "../recovery-relay/out",
      "to": "relay"
    },
    "!node_modules/**/*.{mk,a,o,h}"
  ],
  "afterSign": "electron-builder-notarize",
  "publish": null,
  "mac": {
    "target": [
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.developer-tools",
    "gatekeeperAssess": false,
    "hardenedRuntime": true,
    "entitlements": "./entitlements.plist",
    "entitlementsInherit": "./entitlements.plist"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "Office"
  }
}
